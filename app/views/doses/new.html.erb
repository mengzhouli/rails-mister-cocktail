<% content_for(:title_tag) do %>
  New Cocktail Dose
<% end %>

<h1>Add a dose to your cocktail</h1>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description, label: "Volume and Instruction", placeholder: "Add 1/4 oz of:" %>
  <%= f.association :ingredient, collection: Ingredient.all, error: 'That ingredient has already been added' %>
  <%= f.button :submit, class: "btn btn-success" %>
<% end %>
<hr>

<%= link_to "Go Back", cocktail_path(@cocktail), class: "btn btn-danger" %>
